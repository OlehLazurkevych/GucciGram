@model List<User>

<form asp-controller="Searche" asp-action="Find" method="post" class="search">
    <input type="search" name="request" placeholder="Search" class="input" />
    <button type="submit" class="submit"></button>
</form>

@if (Model.Count == 0)
{
    <h2>No users found, sorry :(</h2>
}
else
{
    <h2>Search results</h2>
    <hr />
    @foreach (var user in Model)
    {
        <div>
            <a asp-controller="Home" asp-action="UserPage/@user.UserName">@user.UserName</a>
            @if (user.IsMale == true)
            {
                <i>Gentleman</i>
            }
            else
            {
                <i>Mademoiselle</i>
            }
            <p>@user.Bio</p>
            <hr />
        </div>
    }
}