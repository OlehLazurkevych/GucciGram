@model PostViewModel

<div class="bg-primary m-1 p-1"><h4>Create Post</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form action="/Post/AddPost" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="UserID" value="@User.Identity.Name" />
    <div class="form-group">
        <input type="file" asp-for="files" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
    <a asp-controller="Home" asp-action="UserPage/@User.Identity.Name" class="btn btn-secondary">Cancel</a>
</form>