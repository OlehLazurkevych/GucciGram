@model GucciGramService.Models.RegistrationFormResponse

<img src="/images/ggf.png" width="290" height="75" alt="GucciGram" title="GucciGram" class="center-img" />
<div class="anons">
    <form asp-action="RegistrationForm" method="post">
        <div asp-validation-summary="All"></div>
        <table>
            <tr>
                <td><label asp-for="UserName">Your Name on page:</label></td>
                <td><input asp-for="UserName" type="text" placeholder="Enter Your Name" /></td>
            </tr>
            <tr>
                <td><label asp-for="Email">Your email:</label></td>
                <td><input asp-for="Email" type="email" placeholder="Enter Your email" /></td>
            </tr>
            <tr>
                <td><label asp-for="Password">Your password:</label></td>
                <td><input asp-for="Password" type="text" placeholder="Enter Your password" /></td>
            </tr>
            <tr>
                <td><label asp-for="GenderID">Gender:</label></td>
                <td>
                    <select asp-for="GenderID">
                        <option value="">Choose an option</option>
                        <option value="true">Gentleman</option>
                        <option value="flase">Mademoiselle</option>
                    </select>
                </td>
            </tr>
        </table>
        <button type="submit" class="centre-btm" style="width:90px;height:25px">Complete</button>
    </form>
</div>